{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@Errors/(.*)$": "<rootDir>/../src/common/errors/$1",
    "^@Filters/(.*)$": "<rootDir>/../src/common/filters/$1",
    "^@Protocols/(.*)$": "<rootDir>/../src/common/protocols/$1"
  }
}
